<p id="notice"><%= notice %></p>
<h1>Search Posts</h1>
<form class="" action="<%= posts_path %>" method='GET'>

  <input type="text" name="q" value="">

</form>



<h1>Posts</h1>

<table id="posts">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="myTable">

      <%= render @posts %>

  </tbody>
</table>

<br>
<h1>New post</h1>

<%= render 'form', post: @post %>

<%= link_to 'Back', posts_path %>
<script>
  $('[name=q]').keyup(function(){
    if($(this).val().length > 2){
    $.ajax({
      url: "<%= posts_path %>",
      type: 'GET',
      dataType: 'script',
      data: {q: $(this).val()}
    })
  }
  if(!this.value){
        $.ajax({
          url: "<%= posts_path %>",
          type: 'GET',
          dataType: 'script'
        })
      }
  })






</script>
